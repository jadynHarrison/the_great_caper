<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@drawable/film_clue"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/rootRow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/mainImage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            android:src="@drawable/gameboard2" />

        <LinearLayout
            android:id="@+id/buttonColumn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your turn."
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/pawn"
                android:layout_width="100dp"
                android:layout_height="112dp"
                android:scaleType="fitStart"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:src="@drawable/yellowpawn" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Colonel Mustard"
                android:textAlignment="center"
                android:textColor="#F2BC0A"
                android:textSize="24sp" />


            <Button
                android:id="@+id/action1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button 1" />

            <Button
                android:id="@+id/action2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Button 2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/oncamera"
                        android:layout_width="50dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:scaleType="fitStart"
                        android:src="@drawable/cameraworking" />

                    <ImageView
                        android:id="@+id/oncamera7"
                        android:layout_width="50dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:scaleType="fitStart"
                        android:src="@drawable/cameraworking" />

                    <ImageView
                        android:id="@+id/oncamera8"
                        android:layout_width="50dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:scaleType="fitStart"
                        android:src="@drawable/cameraworking" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/oncamera9"
                        android:layout_width="50dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:scaleType="fitStart"
                        android:src="@drawable/cameraworking" />

                    <ImageView
                        android:id="@+id/oncamera10"
                        android:layout_width="50dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:scaleType="fitStart"
                        android:src="@drawable/cameraworking" />

                    <ImageView
                        android:id="@+id/oncamera11"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:scaleType="fitStart"
                        android:src="@drawable/cameraworking" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/action1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Button 3" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>